\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{YTMstyle}[2026/01/16 v1.0]

% options
\newif\if@zhcn
\newif\if@enus

\@zhcnfalse
\@enustrue

\DeclareOption{zh-cn}{
  \@zhcntrue
  \@enusfalse
}
\DeclareOption{en-us}{
  \@enustrue
  \@zhcnfalse
}

\ProcessOptions\relax

% Language and encoding
\if@zhcn
  \RequirePackage[UTF8]{ctex}
\fi

% Page layout
\RequirePackage[a4paper,
    top=3cm,
    bottom=3cm,
    left=2cm,
    right=2cm,
    marginparwidth=1.75cm,
    headheight=15.5pt,
    headsep=12pt,
    footskip=25pt
]{geometry}

% Header and footer
\RequirePackage{fancyhdr}
\RequirePackage{lastpage}

\pagestyle{fancy}
\fancyhf{}

\fancyhead[L]{\leftmark}
\fancyhead[R]{\rightmark}
\fancyfoot[R]{\today}
\if@zhcn
  \fancyfoot[L]{第\thepage 页，共\pageref*{LastPage}页}
\else
  \fancyfoot[L]{Page \thepage\ of \pageref*{LastPage}}
\fi

\renewcommand{\headrulewidth}{0.5pt}
\renewcommand{\footrulewidth}{0.5pt}
\renewcommand{\headrule}{\hrule width\headwidth height\headrulewidth \vskip 1mm}


% Math packages
\RequirePackage{amsmath}
\RequirePackage{amssymb}
\RequirePackage{amsfonts}
\RequirePackage{amsthm}
\RequirePackage{physics}

\if@zhcn
  \newtheorem{theorem}{定理}[section]
  \newtheorem{lemma}[theorem]{引理}
  \newtheorem{corollary}[theorem]{推论}
  \newtheorem{definition}{定义}[section]
  \newtheorem{example}{例子}[section]
\fi
\if@enus
  \newtheorem{theorem}{Theorem}[section]
  \newtheorem{lemma}[theorem]{Lemma}
  \newtheorem{corollary}[theorem]{Corollary}
  \newtheorem{definition}{Definition}[section]
  \newtheorem{example}{Example}[section]
\fi

% colored theorems
\RequirePackage{thmtools}
\RequirePackage{coloredtheorem}
\definecolor{lightblue}{RGB}{80, 80, 210}
\if@zhcn
  \cthnewtheorem{definition}{定义}[coltitle=black, colback=yellow!10,
  colframe=orange!75]
  \cthnewtheorem{lemma}{引理}[coltitle=black, colback=yellow!10,
  colframe=pink!75]
  \cthnewtheorem{theorem}{定理}[coltitle=black, colback=yellow!10,
  colframe=magenta!75]
  \cthnewtheorem{remark}{备注}[coltitle=black, colback=yellow!10,
  colframe=purple!75]
  \cthnewtheorem{corollary}{推论}[coltitle=black, colback=yellow!10,
  colframe=purple!75]
  \cthnewtheorem{proof}{证明}[coltitle=black, colback=yellow!10,
  colframe=lightblue!75]
  \cthnewtheorem{example}{例子}[coltitle=black, colback=yellow!10,
  colframe=gray!75]
\fi
\if@enus
  \cthnewtheorem{definition}{Definition}[coltitle=black, colback=yellow!10,
  colframe=orange!75]
  \cthnewtheorem{lemma}{Lemma}[coltitle=black, colback=yellow!10,
  colframe=pink!75]
  \cthnewtheorem{theorem}{Theorem}[coltitle=black, colback=yellow!10,
  colframe=magenta!75]
  \cthnewtheorem{remark}{Remark}[coltitle=black, colback=yellow!10,
  colframe=purple!75]
  \cthnewtheorem{corollary}{Corollary}[coltitle=black, colback=yellow!10,
  colframe=purple!75]
  \cthnewtheorem{proof}{Proof}[coltitle=black, colback=yellow!10,
  colframe=lightblue!75]
  \cthnewtheorem{example}{Example}[coltitle=black, colback=yellow!10,
  colframe=gray!75]
\fi

